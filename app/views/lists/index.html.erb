<div class="banner" style="background-image: url(<%= asset_path 'banner.png' %>); background-position: center;">
<h1>WATCHLIST</h1>
</div>
<%= link_to "Create a list", new_list_path, class:"btn mt-4 pt-2" %>
<br>
<br>
<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <div class="row">
      <% @lists.each do |list| %>
      <div class="co-12 col-sm6 col-md-4 mb-5">
        <%= link_to list_path(list) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= rails_blob_url(list.photo) %>'); height: 100px; background-position: center;">
          <%= list.name %>
            <div class="element">
              <%= link_to "X", list_path(list), :class => "delete-movie", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?"} %>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
