<div class="banner" style="background-image: image_tag <%= @list.photo %>">
</div>

<%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn mt-3" %>
<%= link_to "Back to lists", lists_path, class:"btn mt-3" %>
<br>
<ul>
    <% @bookmarks.each do |bookmark| %>
      <li>
        <%= bookmark.movie.title %>
        <%= bookmark.movie.overview %>
        <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </li>
    <% end %>
</ul>
